.login[data-login]
  height 100%
  width 100%
  position fixed
  top 0
  left 0
  background 50% 50% url("./login_bg.png") no-repeat
  background-size cover
  .icon-login-user,
  .icon-lock
    display block
    width 20px
    height 100%
    background 50% 50% no-repeat
    background-size contain
  .icon-login-user
    background-image url("./icon-user.png")
  .icon-lock
    background-image url("./icon-lock.png")
  .from-warpper
    position fixed
    top 43%
    left 0;
    width 100%
    transform translate3d(0, -50%, 0)
  .form
    margin: 0 auto
    width: 100%
    max-width 640px
    .logo
      width: 100%
      height: 80px
      margin-bottom: 30px
      background url("./login_oa_top.png") no-repeat center center
      background-size contain

    .loginForm
      margin 0 11.85%
    .el-form-item
      margin-bottom 32px
    .el-form-item__content
      line-height 0
      font-size 0
      .el-input__inner
        border-color #d8dce5 !important
        &.is-success
          .el-input__inner
            border-color #d8dce5 !important
        &.is-error
          .el-input__inner
            border-color #bca878 !important
            box-shadow 0px 0px 6px rgba(188, 168, 120, 0.46)
      .el-form-item__error
        padding: 8px 12px  8px 28px;
        box-sizing: border-box;
        background:url("./icon-warning.png") 4px 50% no-repeat rgba(255, 255, 255, 0.58);
        font-size 10px;
        border-radius: 4px;
        border: 1px solid #e26600;
    .el-input
      position: relative;
      .el-input__prefix
        left 10px
      &:after
        display block
        content ''
        width 100%
        padding-top 17.29%
      .el-input__inner
        position: absolute;
        left 0px
        top 0px
        height 100%
        padding-left 40px

    .btn-submit
      position: relative;
      display: flex
      width: 100%
      padding 0
      justify-content center
      align-items center
      background url("./button-bg.png") 50% 50% no-repeat
      background-size cover
      color #5c4611
      border none
      span
        display block
        position: absolute;
        width 100%
      &:after
        display block
        content ''
        padding-top 17.29%
        width 100%



